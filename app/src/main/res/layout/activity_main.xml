<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainActivity"
    android:background="@drawable/login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_horizontal"
            android:text="LOGIN"
            android:textColor="#000000"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edt_Usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/caja"
            android:drawableLeft="@drawable/correo"
            android:padding="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a:"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edt_Clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/caja"
            android:drawableLeft="@drawable/contra"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:padding="5dp" />

        <Button
            android:id="@+id/login_btnEntrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton"
            android:onClick="ingresar"
            android:text="@string/Login_btnEntrar"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/login_btnRegistrar"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boton"
            android:onClick="registrar"
            android:text="@string/Login_btnRegistrar"
            android:textColor="#FFF"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>